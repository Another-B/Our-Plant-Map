{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2022"
    ],
    "typeRoots": ["./types", "./node_modules/@types"],
    "experimentalDecorators": true, // 옵션 추가
    "strictPropertyInitialization": false, // 옵션 추가
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
}