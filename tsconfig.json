{
  "compilerOptions": {
    "target": "es2020",
    "experimentalDecorators": true, // 옵션 추가
    "strictPropertyInitialization": false, // 옵션 추가
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
}